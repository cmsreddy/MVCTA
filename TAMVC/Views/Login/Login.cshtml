@model TAMVC.Models.LoginModel

<div class="row">
    <div class="logincontainer">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <label>Log In :</label>
            <div class="form-horizontal form-signin form-margin" role="form" name="emailLogin">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-6">
                        @if (Model == null)
                        {
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "email", name = "email", placeholder = "Enter your email id", required = "required" })
                        }
                        else
                        {
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "email", name = "email", placeholder = "Enter your email id", required = "required", value = @Model.Email })
                        }
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.UPassword, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-6">
                        @if (Model == null)
                        {
                            @Html.PasswordFor(m => m.UPassword, new { @class = "form-control", id = "password", name = "password", placeholder = "Enter your password", required = "required" })
                        }
                        else
                        {
                            @Html.PasswordFor(m => m.UPassword, new { @class = "form-control", id = "email", name = "email", placeholder = "Enter your email id", required = "required", value = @Model.UPassword })
                        }
                        @Html.ValidationMessageFor(m => m.UPassword)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-10">
                        <div class="checkbox">
                            @*<input type="checkbox"> Remember me*@
                            @if(Model==null){
                            @Html.CheckBoxFor(m => m.RememberMe)
                           
                            }
                            else
                            {
                                 @Html.CheckBox("RememberMe", true)
                            }
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-12">
                        <button type="submit" class="btn btn-default btn-success">Log In</button>

                        @*<button id="register-btn" class="btn btn-default btn-warning">@Html.LabelFor(m =>m.RegisterHere)</button>*@
                        @Html.ActionLink("Register Here", "Register", "Register", null, new { @class = "btn btn-default btn-warning", id = "register-btn" })

                    </div>
                    <center>
                        <h5>
                            @if (@Model != null)
                            {
                                @Model.ErrorMessage
                            }
                        </h5>
                    </center>
                </div>
            </div>
            <div class="form-horizontal form-signin socialForm-margin" role="form" name="socialLogin">
                <div class="form-group">
                    <!--<div class="col-sm-offset-2">
                        <label>Continue with Google | Facebook account</label>
                    </div>-->
                    <div class="col-sm-offset-1 col-sm-10">
                        <a href="#"><button class="google"><span><img src="~/images/gmail.png" width="40px" height="40px"> Continue with Google+</span></button></a> &nbsp &nbsp
                        <a href="#"><button class="facebook"><span><img src="images/fb.png" width="40px" height="40px"> Continue with Facebook</span></button></a>
                    </div>
                  </div>
            </div>
        }
    </div>
</div>
