@model TAMVC.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
<div class="row">
    <div class="logincontainer">
        @using (Html.BeginForm("Register", "Register", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

                <label>Create an Account :</label>
                <div class="form-horizontal form-signin form-margin">

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-4" })*
                        <div class="col-sm-6">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "email", name = "email", placeholder = "Enter your email id" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-4" })
                        <div class="col-sm-6">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "email", name = "email", placeholder = "Enter your password" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.RepeatPassword, new { @class = "control-label col-sm-4" })
                        <div class="col-sm-6">
                            @Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control", id = "email", name = "email", placeholder = "Enter your password again" })
                        </div>
                    </div>
                    <div class="col-sm-offset-3 col-sm-10">
                        <div class="checkbox">
                            <label><input type="checkbox" id="terms" name="terms"> I accept all the terms and conditions</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-12">
                            <input id="create-btn" class="btn btn-md btn-primary" type="submit" value="Create" />

                        </div>
                    </div>
            </div>
        }
    </div>
    <p>@ViewBag.ErrorMsg</p>
</div>
