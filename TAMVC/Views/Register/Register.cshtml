@model TAMVC.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
<div class="row">
    <div class="logincontainer">
        @using (Html.BeginForm("Register", "Register", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

                <label>Create an Account :</label>
                <div class="form-horizontal form-signin form-margin">
                    <div class="form-group">
                        @Html.LabelFor(m => m.First_Name, new { @class = "control-label col-sm-4" })*
                        <div class="col-sm-6">
                            @Html.TextBoxFor(m => m.First_Name, new { @class = "form-control", id = "firstname", name = "firstname", placeholder = "Enter your First Name", required = "required" })
                            @Html.ValidationMessageFor(m => m.First_Name)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Last_Name, new { @class = "control-label col-sm-4" })*
                        <div class="col-sm-6">
                            @Html.TextBoxFor(m => m.Last_Name, new { @class = "form-control", id = "lastname", name = "lastname", placeholder = "Enter your Last Name", required = "required" })
                            @Html.ValidationMessageFor(m => m.Last_Name)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-4" })*
                        <div class="col-sm-6">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "email", name = "email", placeholder = "Enter your Email ID", required = "required" })
                            @Html.ValidationMessageFor(m=>m.Email)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.UPassword, new { @class = "control-label col-sm-4" })
                        <div class="col-sm-6">
                            @Html.PasswordFor(m => m.UPassword, new { @class = "form-control", id = "password", name = "password", placeholder = "Enter your Password", required = "required" })
                            @Html.ValidationMessageFor(m=>m.UPassword)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.RepeatPassword, new { @class = "control-label col-sm-4" })
                        <div class="col-sm-6">
                            @Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control", id = "repeat-password", name = "repeat-password", placeholder = "Enter your Password again", required = "required" })
                            @Html.ValidationMessageFor(m => m.RepeatPassword)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address1, new { @class = "control-label col-sm-4" })*
                        <div class="col-sm-6">
                            @Html.TextBoxFor(m => m.Address1, new { @class = "form-control", id = "address1", name = "address1"})
                            @Html.ValidationMessageFor(m => m.Address1)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address2, new { @class = "control-label col-sm-4" })*
                        <div class="col-sm-6">
                            @Html.TextBoxFor(m => m.Address2, new { @class = "form-control", id = "address2", name = "address2"})
                            @Html.ValidationMessageFor(m => m.Address2)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.State, new { @class = "control-label col-sm-4" })*
                        <div class="col-sm-6">
                            @Html.TextBoxFor(m => m.State, new { @class = "form-control", id = "state", name = "state"})
                            @Html.ValidationMessageFor(m => m.State)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Country, new { @class = "control-label col-sm-4" })*
                        <div class="col-sm-6">
                            @Html.TextBoxFor(m => m.Country, new { @class = "form-control", id = "country", name = "country"})
                            @Html.ValidationMessageFor(m => m.Country)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Phone, new { @class = "control-label col-sm-4" })*
                        <div class="col-sm-6">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", id = "state", name = "state"})
                            @Html.ValidationMessageFor(m => m.State)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Gender, new { @class = "control-label col-sm-4" })*
                        <div class="col-sm-6" style="padding-top: 10px">
                            @Html.RadioButtonFor(m=>m.Gender,true,  new { @class = ""})Male
                            @Html.RadioButtonFor(m=>m.Gender,false, new { @class = ""})Female
                            @Html.ValidationMessageFor(m => m.Gender)
                            
                        </div>
                    </div>

                    <div class="col-sm-offset-3 col-sm-10">
                        <div class="checkbox" id="terms" name="terms">
                            @Html.CheckBoxFor(m => m.TandC)
                            @Html.LabelFor(m => m.TandC)
                            @*<label><input type="checkbox" id="terms" name="terms"> I accept all the terms and conditions</label>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-12">
                            <input id="create-btn" class="btn btn-md btn-primary" type="submit" value="Create" />
                        </div>
                    </div>
            </div>
        }
    </div>
    <center>
    <h4>
        @ViewBag.Message
    </h4>
</center>
</div>
