@model TAMVC.Models.DetailsModel
           <div class="container">
    <div class="row">
        <div class="detailcontainer">
            <div class="col-xs-5">
                <img class="detail-image" src="@Model.ClassifiedImage" width="400px" height="300px">
            </div>
            <div class="col-xs-7">
                <h2>@Model.ClassifiedTitle</h2>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
</div>